<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chartRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_moon"
    android:padding="16dp">

    <!-- ðŸŒ™ Arka plan -->
    <ImageView
        android:id="@+id/imageChartBackground"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/bg_moon"
        android:layout_gravity="center"
        android:alpha="0.15"
        android:scaleType="centerCrop" />

    <!-- Ä°Ã§erik -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- BaÅŸlÄ±k -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birth Map"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- BurÃ§ kartlarÄ± -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- GÃ¼neÅŸ Burcu -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageSunSign"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sun_placeholder" />

                    <TextView
                        android:id="@+id/textSunSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="GÃ¼neÅŸ"/>
                </LinearLayout>

                <!-- Ay Burcu -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageMoonSign"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sun_placeholder" />

                    <TextView
                        android:id="@+id/textMoonSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Ay"/>
                </LinearLayout>

                <!-- YÃ¼kselen BurÃ§ -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageRisingSign"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_sun_placeholder" />

                    <TextView
                        android:id="@+id/textRisingSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="YÃ¼kselen"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Buton -->
            <Button
                android:id="@+id/buttonGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yorumla"
                android:layout_marginBottom="16dp" />

            <!-- AI Yorum -->
            <TextView
                android:id="@+id/textViewResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/round_card_background"
                android:lineSpacingExtra="6dp"
                android:padding="12dp"
                android:textColor="#EEEEEE"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
