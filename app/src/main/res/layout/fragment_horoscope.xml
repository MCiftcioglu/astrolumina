<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horoscopeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:padding="16dp">

    <!-- 🌙 Arka plan efekti -->
    <ImageView
        android:id="@+id/bgMoon"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/bg_moon"
        android:alpha="0.1"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <!-- 📜 İçerik -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <!-- Başlık -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Günlük Burç Yorumun"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- 🔽 Spinner ile burç seçimi -->
        <Spinner
            android:id="@+id/spinnerSign"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            android:popupBackground="#1B263B"
            android:theme="@style/Theme.MaterialComponents.DayNight" />

        <!-- 📝 Kart şeklinde yorum alanı -->
        <TextView
            android:id="@+id/textHoroscope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:lineSpacingExtra="6dp"
            android:background="@drawable/round_card_background"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
