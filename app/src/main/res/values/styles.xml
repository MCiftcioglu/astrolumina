<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Uygulamanın genel teması -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0D1B2A</item>
        <item name="colorPrimaryVariant">#1B263B</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#415A77</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">#0D1B2A</item>
        <item name="android:fontFamily">@font/parkinsans_regular</item>
        <item name="fontFamily">@font/parkinsans_regular</item>
    </style>

    <!-- Örnek özel başlık stili -->
    <style name="TitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/parkinsans_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Astro burç kartları için özel stil -->
    <style name="AstroCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/round_card_background</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="AstroCardContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AstroCardText">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
